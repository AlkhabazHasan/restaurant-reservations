<p>
  <strong>Title:</strong>
  <%= @restaurant.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @restaurant.description %>
</p>

<h3>Seats</h3>
<% if @seats.present? %>
  <%= render "reserve_tables" %>
<% else %>
  <%= render "configuration_set_up" %>
<% end %>

<div class="col-md-6">
<% if @restaurant.managers.present? %>
  <h3>Managers</h3>
  <table>
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Phone number</th>
        <th>Address</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @restaurant.managers.each do |manager| %>
        <tr>
          <td><%= manager.first_name %>
          <td><%= manager.last_name %>
          <td><%= manager.phone_number %>
          <td><%= manager.address %>
          <td><%= manager.email %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<% if current_user.restaurant_manager(@restaurant) %>
  <%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<% end %>
<%= link_to 'Back', restaurants_path %>
</div>
