<h1>Listing Reviews</h1>

<% current_user.reservations.each { |res| res.expired? } %>
<% current_user.invitations.each { |res| res.expired? } %>

<table>
  <thead>
    <tr>
      <th>Restaurant</th>
      <th>Date</th>
      <th>Duration (hours)</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.restaurant.title %>
        <td><%= review.reservation.date %>
        <td><%= review.reservation.duration %>
        <td><%= review.rating ? review.rating : "Not yet rated" %>
        <td><%= link_to 'Show', users_review_path(review) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
