<div class="col-md-8">
  <div class="panel panel-default">
    <div class="panel panel-heading">My friends</div>
    <div class="panel panel-body">
      <% if @friendships.empty? %>
        <h2>Seems like you don't have friends on your profile</h2>
        <p>How about adding some?</p>
      <% else %>
        <table>
          <thead>
            <tr>
              <th>First name</th>
              <th>Last name</th>
              <th>Phone number</th>
              <th>Address</th>
              <th>Email</th>
              <th>Visits</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @friendships.each do |friendship| %>
              <tr>
                <td><%= friendship.friend.first_name %>
                <td><%= friendship.friend.last_name %>
                <td><%= friendship.friend.phone_number %>
                <td><%= friendship.friend.address %>
                <td><%= friendship.friend.email %>
                <td><%= link_to 'Show', users_friendship_path(friendship),
                                        :class => "btn btn-info" %></td>
                <td><%= link_to 'Remove from friends',
                                users_friendship_path(friendship, :friend_id => friendship.friend_id),
                                method: :delete,
                                :class => "btn btn-danger",
                                data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
